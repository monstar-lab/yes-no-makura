    <header id="fh5co-header" class="fh5co-cover" role="banner" style="background-image:url(images/img_bg_1.jpg);">
	<div class="overlay"></div>
	<div class="container">
	    <div class="row">
		<div class="col-md-10 col-md-offset-1 text-center">
		    <div class="display-t">
			<div class="display-tc animate-box" data-animate-effect="fadeIn">
			    <% case menu %>
			    <% when "Questions" %>
				<h1>Questions</h1>
				<h2>View Questions</h2>
				<p><a href="/questions/new" class="btn btn-default">New Question</a></p>
			    <% when "Number"%>
				<h1>Number Of Participants</h1>
				<h2>Number Restriction</h2>
				<p><a href="/number_of_participants/new" class="btn btn-default">New Number Of participant</a></p>
			    <% when "admin_show" %>
				<p id="notice"><%= notice %></p>
				<span class="x-large"> Q：</span>
				<% if @question.body.length < 16 %>
				    <span class="xx-large"><%= @question.body %></span>
				<% else %>
				    <span class="xx16-large"><%= @question.body %></span>
				<% end %>
				
				<br><%= submit_tag "結果表示", class: "btn btn-primary" %>
			    <% when "number_show" %>
				<span class="x-large"> Number：</span>
				<span class="xx-large"><%= @number_of_participant.number %></span>
			    <% end %>
			</div>
		    </div>
		</div>
	    </div>
	</div>
    </header>
