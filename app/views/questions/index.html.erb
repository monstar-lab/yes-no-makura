<%= render partial: "shared/header", locals: {menu: "Questions"} %>
<p id="notice"><%= notice %></p>
<div>　</div>
<div>　</div>
<div>　</div>
<table>
    <thead>
	<tr>
	    <th>Body</th>
	    <th>State</th>
	    <th colspan="3">Options</th>
	</tr>
    </thead>
    <tbody>
	<% @questions.each do |question| %>
	    <tr>
		<td><%= question.body %></td>
		<td><%= question.state %></td>
		<td>
		    <%= link_to image_tag('show.png', { border: '0', alt: 'Show'}), question %>
		    <%= link_to 'Show', "/admin/questions/#{question.id }" %>
		</td>
		<td>
		    <%= link_to image_tag('edit.png', { border: '0', alt: 'Edit'}), edit_question_path(question) %>
		    <%= link_to 'Edit', edit_question_path(question) %>
		</td>
		<td>
		    <%= link_to image_tag('destroy.png', { border: '0', alt: 'Destroy'}), question, method: :delete, data: { confirm: 'Are you sure?' } %>
		    <%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %>
		</td>
	    </tr>
	<% end %>
    </tbody>
</table>

<%= render 'shared/footer' %>
