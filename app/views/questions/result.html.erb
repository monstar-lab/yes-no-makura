<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <%= image_tag "logo2.png"%>
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <div class="question_title">
      質問：<%= @question.body %>
    </div>
    <div class="center">
      <b class="answer_font">
        <%= @yes_count %></b><small class="number_of_participant_font">/<%= @answers_count %>
      </small>
    </div>
    <%= javascript_tag do %>
    yes_count = <%= raw @yes_count %>;
    answers_count = <%= raw @answers_count %>;
    <% end %>
    <div class="center">
      <%= link_to "次の質問へ", controller: 'questions', action: 'show', id: '0'  %>
    </div>
    <script>
      var max=answers_count,max_h,max_q,max_e;
      var min=0,min_h,min_q,min_e;
      var speed=100;
      var ran,ran_b=0;
      function change_number(){
        ran = Math.round(min+(Math.random()*(max-min)));
        if((ran==ran_b)&&(ran!=0)){
          ran--;
        }
        else if((ran==ran_b)&&(ran==0)){
          ran=1;
        }
        document.getElementsByTagName("b")[0].firstChild.nodeValue = ran;
        ran_b=ran;
      }
      $(function(){
          var setTimer = setInterval(function(){
          change_number();
        },speed);
       });
    </script>
  </body>
</html>
